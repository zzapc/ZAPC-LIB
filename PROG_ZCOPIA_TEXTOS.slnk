 <source>*&amp;---------------------------------------------------------------------*
*&amp; Report  ZCOPIA_TEXTOS
*&amp;
*&amp;---------------------------------------------------------------------*
*&amp;
*&amp;
*&amp;---------------------------------------------------------------------*

REPORT  zcopia_textos.

TABLES: trdir.
DATA: i_textos TYPE TABLE OF textpool WITH HEADER LINE,
      i_trdir TYPE TABLE OF trdir WITH HEADER LINE.

SELECT-OPTIONS s_name FOR trdir-name.

PARAMETERS: p_iorig LIKE sy-langu DEFAULT &apos;E&apos; OBLIGATORY,
            p_idest LIKE sy-langu OBLIGATORY.

START-OF-SELECTION.


  SELECT * FROM trdir
    INTO TABLE i_trdir
   WHERE name IN s_name.

  LOOP AT i_trdir.
    REFRESH i_textos.
    READ TEXTPOOL i_trdir-name INTO i_textos LANGUAGE p_iorig.
    IF sy-subrc = 0 AND NOT i_textos[] IS INITIAL.
      INSERT textpool i_trdir-name FROM i_textos LANGUAGE p_idest.
    ENDIF.
  ENDLOOP.</source>
</PROG>
