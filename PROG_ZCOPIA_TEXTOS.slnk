   <textElement ID="R" ENTRY="Copia textos entre idiomas" LENGTH="26 "/>
   <textElement ID="S" KEY="P_IDEST" ENTRY="        Idioma destino" LENGTH="22 "/>
   <textElement ID="S" KEY="P_IORIG" ENTRY="        Idioma origen" LENGTH="21 "/>
   <textElement ID="S" KEY="S_NAME" ENTRY="D       ." LENGTH="9 "/>
